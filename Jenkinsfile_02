#!groovy

pipeline {
    agent {
        docker {
            image "maven:3.6.0-jdk-13"
            //label "docker"
            args "-v /tmp/maven:/var/maven/.m2 -e MAVEN_CONFIG=/var/maven/.m2"
        }
    }

    stages {
        stage("Build") {
            steps {
                sh "mvn -version"
                sh "mvn clean install"
                
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        
        stage ('Copy artifact'){
            steps{
              sh 'cp /var/lib/jenkins/workspace/maven_build_2/?/.m2/repository/com/github/wololock/maven-pipeline-demo/* /var/lib/jenkins/project'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
